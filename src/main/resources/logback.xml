<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-40([%d{dd MM yyyy; HH:mm:ss}] [%t] [%highlight(%.5level)]) [%class{5}] [%L] - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
